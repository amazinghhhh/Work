<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:layout_constraintDimensionRatio="H,1:1"
        android:id="@+id/ig_musictubiao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_musicname"
        app:layout_constraintHorizontal_weight="1"
        android:src="@mipmap/music_tubiao"
        android:layout_width="0dp"
        android:layout_height="0dp"></ImageView>

    <TextView
        android:id="@+id/tv_musicname"
        app:layout_constraintLeft_toRightOf="@+id/ig_musictubiao"
        app:layout_constraintRight_toLeftOf="@id/ig_musicpause"
        app:layout_constraintTop_toTopOf="@id/ig_musictubiao"
        app:layout_constraintHorizontal_weight="5"
        android:text="Vagrant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/tv_musictishi"
        app:layout_constraintLeft_toRightOf="@+id/ig_musictubiao"
        app:layout_constraintRight_toLeftOf="@id/ig_musicpause"
        app:layout_constraintBottom_toBottomOf="@id/ig_musictubiao"
        app:layout_constraintHorizontal_weight="5"
        android:text="Vagrant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/ig_musicpause"
        app:layout_constraintTop_toTopOf="@id/ig_musictubiao"
        app:layout_constraintBottom_toBottomOf="@id/ig_musictubiao"
        app:layout_constraintRight_toLeftOf="@id/ig_musicliebiao"
        app:layout_constraintLeft_toRightOf="@id/tv_musicname"
        android:src="@mipmap/music_pause"
        android:layout_width="0dp"
        android:layout_height="0dp"></ImageView>



    <ImageView
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/ig_musicliebiao"
        app:layout_constraintTop_toTopOf="@id/ig_musictubiao"
        app:layout_constraintBottom_toBottomOf="@id/ig_musictubiao"
        app:layout_constraintLeft_toRightOf="@id/ig_musicpause"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/music_pause"
        android:layout_width="0dp"
        android:layout_height="0dp"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>